        <div class="cell small-6 float-left">
            <h3>Nouvelle gallerie</h3>
        </div>
        <div class="cell small-6">
            <a href="{{ path('admin_gallery_home') }}" class="button secondary float-right">Publier</a>
        </div>
    </div>

    {{ form_start(galleryForm) }}
